<%= flash[:notice] %>

<div class = "container">
  <div class = "row">
    <div class = "col-md-3">
      <h2>User info</h2>
      <td><%= image_tag @user.get_profile_image, size: "100x100" %></td>
      <table class = "table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <%= render 'new_book', book: @book %>
    </div>
    <div class = "col-md-8 offset-md-1">
      <h2>Book details</h2>
      <table>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan = "3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= image_tag @book.get_profile_image, size:"80x80" %></td>
            <td>
              <%= link_to  %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <td><%= link_to "Show", book_path(@book.id) %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
