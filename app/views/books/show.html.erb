<%= flash[:notice] %>

<%= render 'new_book', book: @book %>

<div>
  <h2>Book details</h2>
  <table>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan = "3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= image_tag @book.user.get_profile_image, size: "80x80" %></td>
        <td>
          <%= @user.name %>
          <%= link_to user_path(@user) %>
        </td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
      </tr>
    </tbody>
  </table>
</div>
