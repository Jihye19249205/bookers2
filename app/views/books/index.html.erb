<%= flash[:notice] %>

<div class = "container">
  <div class = "row">
    <div class = "col-md-3">
      <%= render 'users/user_info', user: current_user %>
      <%= render 'new_book', book: @book %>
    </div>
    <div class = "col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class = "table table-hover table-inverse">
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan = "3"></th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
          <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

