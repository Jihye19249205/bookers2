<%= flash[:notice] %>

<div class = "container">
  <div class = "row">
    <div class = "col-md-3">
      <%= render 'users/user_info', user: current_user %>
      <%= render 'new_book', book: @book_new %>
    </div>
    <div class = "col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class = "table table-hover table-inverse">
        <thead>
          <tr>
            <th colspan = "1"></th>
            <th>Title</th>
            <th>Opinion</th>
        </thead>
        <tbody>
        <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to book_path(book) do %>
              <%= image_tag book.get_profile_image, size:"80x80" %><br/>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(book) do %>
              <%= book.title %>
            <% end %>
          </td>
          
          <td><%= book.body %></td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

