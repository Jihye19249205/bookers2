<div class = "container">
  <div class = "row">
    <div class = "col-md-3">
      <%= render 'user_info', user: current_user %>
      <%= render 'books/new_book', book: @book %>
    </div>
    <div class = "col-md-8 offset-md-1">
      <h2>Users</h2>
      <table = "table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan = "3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image, size:"80x80" %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", users_path(@users) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
