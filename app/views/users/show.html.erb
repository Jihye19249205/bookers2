<%= flash[:notice] %>

<div class = "container">
  <div class = "row">
    <div class = "col-md-3">
      <h2>User info</h2>
      <td><%= image_tag @user.get_profile_image, size: "100x100" %></td>
      <table class = "table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <button class = "btn btn-outline-secondary btn-block">
        <%= link_to edit_user_path(@user) do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </button>
      <%= render 'books/new_book', book: @book %>
    </div>
  <div class = "col-md-8 offset-md-1">
    <h2>Books</h2>
      <table class = "table table-hover table-inverse">
        <thead>
          <tr>
            <th colspan = "1"></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
            <%= image_tag @user.get_profile_image, size:"80x80" %>
            </td>
            <td>
              <%= link_to book_path(@user.books) do %>
                <%= book.title %>
              <% end %>
              </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


