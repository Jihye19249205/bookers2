<%= flash[:notice] %>

<div class = "container">
  <div class = "row">
    <div class = "col-md-3">
      <h2>User info</h2>
      <td><%= image_tag @user.get_profile_image, size: "100x100" %></td>
      <table class = "table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <btn class = "update_btn">
        <%= link_to "user update", edit_user_path(@user) %>
      </btn>
      <%= render 'books/new_book', book: @book %>
    </div>
  <div class = "col-md-8 offset-md-1">
    <h2>Books</h2>
      <table class = "table table-hover table-inverse">
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan = "3"></th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show", book_path(book.id) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


